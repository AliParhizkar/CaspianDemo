@namespace Caspian.UI
@typeparam TEntity

<div class="t-toolbar t-grid-toolbar t-grid-top">
    @if (!HideInsertIcon)
    {
        <a @onclick="OpenAddForm" class="t-grid-add" href="javascript:void(0)">
            <span class="t-icon"></span>
        </a>
    }
</div>

@code 
{
    [Parameter]
    public bool HideInsertIcon { get; set; }

    [CascadingParameter(Name = "GridStateData")]
    public ColumnAppState<TEntity> GridToolsBarAppState { get; set; }

    void OpenAddForm()
    {
        GridToolsBarAppState.Grid.OpenForm(default(TEntity));
    }
}
