@page "/AcceptingFaculty"
@inherits SimplePage<AcceptingFaculty>
@inject AcceptingFacultyService service

<table style="width:90%">
    <tr>
        <td>
            <label>عنوان</label>
        </td>
        <td>
            <StringTextBox @bind-Value="SearchData.Title" Search />
        </td>
    </tr>
</table>
<Grid @bind-Data="GridData" TEntity="AcceptingFaculty" Search="SearchData" Service="service" TableHeight="400"
      Title="دانشکده پدیرش" WindowStyle="width:500px">
    <Columns>
        <GridColumn TEntity="AcceptingFaculty" Field="t => t.AcceptingUniversity.Title" Title="دانشگاه پذیرش" />
        <GridColumn TEntity="AcceptingFaculty" Field="t => t.Faculty.Title" Title="دانشکده من" />
        <GridColumn TEntity="AcceptingFaculty" Field="t => t.Title" />
        <GridColumn TEntity="AcceptingFaculty" Field="t => t.Code" />
    </Columns>
    <EditFormTemplate>
        <table style="width:90%;margin:0 auto">
            <tr>
                <td style="width:125px;">دانشگاه پدیرش</td>
                <td>
                    <ComboBox @bind-Value="GridData.AcceptingUniversityId" TValue="int" TEntity="AcceptingUniversity"
                              DisplayTextExpression="t => t.Title" OrderByExpression="t => t.Title" />
                </td>
            </tr>
            <tr>
                <td><label>دانشکده من</label></td>
                <td>
                    <ComboBox @bind-Value="GridData.FacultyId" TValue="int" TEntity="Faculty"
                              DisplayTextExpression="t => t.Title" OrderByExpression="t => t.Title" />
                </td>
            </tr>
            <tr>
                <td><label>عنوان</label></td>
                <td>
                    <StringTextBox @bind-Value="GridData.Title" />
                </td>
            </tr>
            <tr>
                <td><label>کد</label></td>
                <td>
                    <StringTextBox @bind-Value="GridData.Code" Style="direction:ltr" />
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <FormCommandButton />
                </td>
            </tr>
        </table>
    </EditFormTemplate>
</Grid>

