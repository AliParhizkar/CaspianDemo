@page "/Trend"
@inherits SimplePage<Trend>
@inject TrendService service
<table style="width:90%">
    <tr>
        <td>
            <label>گرایش</label>
        </td>
        <td>
            <StringTextBox @bind-Value="SearchData.Title" Search />
        </td>
    </tr>
</table>
